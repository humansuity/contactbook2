<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#59267c" />
            <gradient android:angle="-90" android:startColor="#e2d4e7" android:endColor="#f5f5f5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8f5db7" />
            <solid android:color="#e2d4e7"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#59267c" />
            <gradient android:angle="-90" android:startColor="#f5f5f5" android:endColor="#f5f5f5" />
        </shape>
    </item>
</selector>